<Window
    x:Class="EmitterHub.UI.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:EmitterHub.UI.Converters"
    xmlns:vm="clr-namespace:EmitterHub.UI.ViewModels"
    Title="EmitterHub Dashboard"
    Width="400"
    Height="800"
    x:DataType="vm:StatsViewModel">

    <!--  Convertisseurs  -->
    <Window.Resources>
        <conv:ValueToBrushConverter x:Key="ValueToBrush" />
        <conv:NullToBoolConverter x:Key="NullToBoolConverter" />
    </Window.Resources>

    <!--  Conteneur principal  -->
    <StackPanel Margin="20" Spacing="15">

        <!--  Titre des stats  -->
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="24"
            Text="ðŸ“Š Statistiques en temps rÃ©el" />

        <!--  Grille des stats  -->
        <Grid
            ColumnDefinitions="2*,*"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
            RowSpacing="8">
            <TextBlock Grid.Row="0" Text="Messages eHuB reÃ§us :" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding MessagesReceived}" />

            <TextBlock Grid.Row="1" Text="EntitÃ©s actives :" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding ActiveEntities}" />

            <TextBlock Grid.Row="2" Text="Paquets ArtNet envoyÃ©s :" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding PacketsSent}" />

            <TextBlock Grid.Row="3" Text="Univers configurÃ©s :" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding TotalUniverses}" />

            <TextBlock Grid.Row="4" Text="Mappings totaux :" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding TotalMappings}" />

            <TextBlock Grid.Row="5" Text="Trames actives :" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="1"
                Text="{Binding ActiveFrames}" />
        </Grid>

        <!-- [E2] Moniteur eHuB -->
        <TextBlock FontSize="18" FontWeight="Bold" Text="Moniteur eHuB" />
        <StackPanel Orientation="Horizontal" Spacing="10">
            <ToggleSwitch Content="Activer le moniteur eHuB" IsChecked="{Binding IsEhubMonitorEnabled}" />
            <TextBlock VerticalAlignment="Center" Text="FPS :" />
            <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{Binding EhubFps}" />
        </StackPanel>

        <!-- [E2] Sparkline simple des FPS (barres) -->
        <Border Background="#101318" CornerRadius="8" Padding="8">
            <Grid RowDefinitions="Auto,Auto">
                <TextBlock Foreground="#aaa" FontSize="12" Text="Historique FPS (0â€“60)" />
                <Border Grid.Row="1" Height="60" Margin="0,6,0,0" Background="#1b2030" CornerRadius="4" ClipToBounds="True">
                    <ItemsControl ItemsSource="{Binding EhubFpsHistory}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Hauteur = valeur bornÃ©e 0..60, alignÃ©e en bas -->
                                <Border Width="4" Margin="1,0" Background="#64B5F6" VerticalAlignment="Bottom">
                                    <Border.Height>
                                        <Binding />
                                    </Border.Height>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>
        </Border>

        <!--  Moniteur DMX  -->
        <TextBlock
            FontSize="18"
            FontWeight="Bold"
            Text="Moniteur DMX" />

        <!--  SÃ©lection d'univers  -->
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock VerticalAlignment="Center" Text="Univers :" />
            <ComboBox
                Width="80"
                ItemsSource="{Binding UniverseOptions}"
                SelectedItem="{Binding SelectedUniverse}" />
        </StackPanel>

        <!--  Activation et vidage du moniteur  -->
        <StackPanel Orientation="Horizontal" Spacing="10">
            <ToggleSwitch Content="Activer le moniteur" IsChecked="{Binding IsMonitorEnabled}" />
            <Button Command="{Binding ClearMonitorCommand}" Content="Vider" />
        </StackPanel>

        <!--  Affichage temps rÃ©el de la trame courante  -->
        <TextBlock
            FontSize="16"
            FontWeight="Bold"
            Text="InstantanÃ© DMX" />
        <TextBlock
            FontStyle="Italic"
            IsVisible="{Binding CurrentFrame, Converter={StaticResource NullToBoolConverter}}"
            Text="{Binding CurrentFrame.DisplayText}" />

        <!--  On enlÃ¨ve le ScrollViewer  -->
        <ItemsControl IsVisible="{Binding CurrentFrame, Converter={StaticResource NullToBoolConverter}}" ItemsSource="{Binding CurrentFrame.Channels}">

            <!--  On fixe la taille de chaque carrÃ©  -->
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        ItemHeight="8"
                        ItemWidth="8"
                        Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="8"
                        Height="8"
                        Margin="1"
                        Background="{Binding Converter={StaticResource ValueToBrush}}"
                        BorderBrush="White"
                        BorderThickness="1" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</Window>
